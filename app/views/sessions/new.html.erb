<h1>Sign In </h1>
<p style="color: red"><%= flash[:alert] %></p>

<div class = "m-3">
  <h4>Don't have an account? <%= link_to "Sign Up",  sign_up_path%> here.</h4>
</div>
<%= form_with url: sign_in_path do |form|%>

<div class ="m-3">
<%= form.label "Username:"%>
<%= form.text_field :name, class:"form-control" , placeholder: "Enter Username..."%>
</div>
<div class ="m-3">
<%= form.label "Password:"%>
<%= form.password_field :password,class: "form-control", placeholder: "Enter Password..."%>
</div>
<div class ="m-3">
<%= form.submit "Sign In", class: "btn btn-primary" %>
</div>

<% end %>

