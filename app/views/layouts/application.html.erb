     <%if session[:accountId]
        @account = Account.find_by(id: session[:accountId])
        else
        @account = nil
      end%>

<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/products">The Model Man</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item  px-2">
        <a class="nav-link" href="/products">All Products</a>
      </li>
      <li class="nav-item  px-2">
        <a class="nav-link" href="/new">New Items</a>
      </li>
      <li class="nav-item px-2">
        <a class="nav-link" href="/sale">On Sale</a>
      </li>
      <li class="nav-item">
          <li class="nav-item px-2 mr-sm-2">
            <%if @account %>
              <%= button_to "Logout",  logout_path, method: :delete,  class: "btn btn-primary"%>
              <%else%>
               <%= link_to "Log In",  sign_in_path,  class: "btn btn-primary"%>
            <%end%>
          </li>
      </li>
      <li class="nav-item px-2">
          <%= render partial: "cart/cart" if @render_cart%>
      </li>
    </ul>
  </div>
</nav>
  <%= yield %>
  </body>
